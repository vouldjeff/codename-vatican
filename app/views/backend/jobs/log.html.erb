<% title "Лог" %>
<%= link_to "Назад", backend_jobs_path %>

<table class="sorted-table"> 
  <thead> 
    <tr> 
      <th width="70">Състояние</th> 
      <th>Тип</th> 
      <th>Кога?</th>
      <th>Време</th>
      <th>Информация</th>
      <th>Още</th> 
      <th></th>
    </tr> 
  </thead> 
  <tbody> 
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.status %></td>
        <td><%= log.job_type %></td>
        <td><abbr title="<%= l log.created_at, :format => :long %>"><%= time_ago_in_words log.created_at %></abbr></td>
        <td><%= log.time %></td>
        <td><%= log.info %></td>
        <td><%= log.error_code %></td>
        <td><%= link_to "<span>Изтрий</span>".html_safe, log_backend_jobs_path(:id => log), :confirm => 'Сигурни ли сте, че искате да премахнете този запис?', :method => :delete, :class => "icon-link icon-sprite-remove" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


