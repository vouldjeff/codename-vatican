<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) || "allus.in" %></title>
  <%= stylesheet_link_tag :all, :cache => true %>
  <%= javascript_include_tag :defaults, 'jquery.tablesorter.min.js', 'jquery.easing.1.3.js', 'jquery.color.js', :cache => true, :concat => true %>
  <%= csrf_meta_tag %>
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
<div id="header">
  <div class="header-inner">
    <div class="left">
      <a href="/" class="logo"><img src="/images/logo.png" alt="allus.in" height="50px" /></a>
    </div>
    <div class="right">
      <div id="user_nav">
    <% if user_signed_in? %>
      Влязли сте като <%= current_user.email %>.
      <%= link_to "Изход", destroy_user_session_path %>
      <br />
    <% end %>
    <%= link_to "Аутентикации", authentications_path %>
  </div>
  </div>
</div>
</div>

<div id="wrapper">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
  
  <%= (h1?) ? (content_tag :h1, (show_h1?) ? yield(:h1) : yield(:title)) : "" %>
  <%= yield %>
</div>

<script language="javascript">
